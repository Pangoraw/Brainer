div#card-overlay
	width 100%
	height 100%
	z-index 1
	position absolute
	top 0
	left 0
	background-color rgba(128, 128, 128, 0.5)
	display flex
	&.shown
		display flex
	&.hidden 
		display none
	div#card
		border grey solid 2px
		background-color #fff
		margin auto
		margin-top 25%
		padding 10px
		width 300px
		display flex
		-webkit-box-orient vertical
		flex-flow column
		> button.close-button
			position absolute
		> p
			padding 5px
		> input
			margin-bottom 5px
		> label
			margin-bottom 5px
		> select
			margin-bottom 10px
			padding 3px
			