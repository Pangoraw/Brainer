/************************************
*************RESET*******************
************************************/
@import 'nib'
@import './fonts.styl'

global-reset()

body
	display flex
	margin 0
	padding 0
	background-color #ddd
	font-family "Lucida Grande", Arial


/************************************
*************NAVBAR******************
************************************/

nav.files-list
	transition margin-left 0.5s
	&.is-closed
		margin-left -251px
	&.is-open
		margin-left 0
	float left
	width 250px
	height 100%
	background-color #89a02cff
	overflow hidden
	position relative
	top 0
	left 0
	min-width 200px
	border-right 2px solid rgba(#000,0.1)
	line-height 1
	.control-panel
		button
			float left
			width 20%
			&.change-name
				width 50%
			&.reload
				width 50%
		input.search
			width 100%
	button 
		margin 0
	ul
		list-style none
		margin 0
		padding 0
		font-size 1.5em
		height 100%
	li
		height 30px
		background-color #768e0eff
		margin 0
		padding 0.25em 0.25em
		margin 0.25em 0.25em
		cursor pointer
		color rgba(#fff,0.9)
		border 2px solid transparent
		&.selected
			background-color #61740D
		> button.files
			background none
			border none
			width 100%
			height 100%
			padding 0
			position relative
			top 50%
			transform translateY(-50%)
p.name
	overflow hidden
	float left
	font-size 23px
	color white
	font-family 'Kapak'
	text-decoration none
	text-transform capitalize
	margin-bottom 10px
p.type
	font-family Ubuntu
	float right
	color #ddd
	text-transform uppercase
	font-size 15px
	font-style italic
				 
				

/************************************
*************CONTENT*****************
************************************/

div.view
	display block
	width 100%
	height 100%

div#content
	height 100%
	width 100%
	position fixed
	top 50px

/************************************
*************FILES LIST**************
************************************/

ol, li
	list-style none